<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conf_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="dev.mad.ussd4etecsa.ConfigActivity"
    tools:showIn="@layout/activity_config">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/cv_accesibilidad"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="1.0" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:text="Accesibilidad"
                    android:textAllCaps="true"
                    android:textColor="@color/black_de"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView5"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="@string/descripcion_accesibilidad"
                    android:textAlignment="viewStart"
                    android:textColor="@color/cardview_dark_background" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_notification"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_accesibilidad"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_notificacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:text="Notificación"
                    android:textAllCaps="true"
                    android:textColor="@color/black_de"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tv_notificacion"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingLeft="8dp"
                    android:paddingTop="4dp"
                    android:text="@string/descripcion_notificacion"
                    android:textColor="@color/cardview_dark_background" />

                <Switch
                    android:id="@+id/sw_config_notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="8dp"
                    android:checked="false"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:text="Activar notificación "
                    tools:checked="false" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_Call_Sms_Reciber"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_notification"
            app:layout_constraintHorizontal_bias="0.0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_auto_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_auto_title"
                    android:layout_alignStart="@+id/tv_auto_title"
                    android:layout_below="@+id/tv_auto_title"
                    android:layout_marginTop="4dp"
                    android:text="@string/config_Automata_text"
                    android:textColor="@color/cardview_dark_background" />

                <TextView
                    android:id="@+id/tv_auto_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/config_Automata_title"
                    android:textAllCaps="true"
                    android:textColor="@color/black_de"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/cbx_config_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_auto_text"
                    android:layout_alignStart="@+id/tv_auto_text"
                    android:layout_below="@+id/tv_auto_text"
                    android:layout_marginTop="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/config_chbox_call"
                    android:textColor="@color/cardview_dark_background"
                    app:buttonTint="@color/colorAccent" />

                <CheckBox
                    android:id="@+id/cbx_config_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/cbx_config_call"
                    android:layout_alignStart="@+id/cbx_config_call"
                    android:layout_below="@+id/cbx_config_call"
                    android:layout_marginTop="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/config_chbox_sms"
                    android:textColor="@color/cardview_dark_background"
                    app:buttonTint="@color/colorAccent" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>